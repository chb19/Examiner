@using Microsoft.AspNetCore.Identity
@model Examiner.WEB.ViewModels.UserViewModel

<h2>Edit user @Model.Email</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" name="userId" value="@Model.Id" />
    <div class="form-group">
        @Html.LabelFor(m => m.Role, new { @class = "col-md-2 control-label" })
        <div class="col-lg-2">
            @Html.DropDownListFor(m => m.Role, new SelectList(ViewBag.Roles, "Value", "Text"), new { @class = "form-control" })
        </div>
    </div>
    <div>
        <div class="col-lg-2">
            <input type="submit" class="btn badge-info" value="Update" />
        </div>
    </div>
</form>