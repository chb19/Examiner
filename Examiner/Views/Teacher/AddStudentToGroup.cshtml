@model Examiner.WEB.ViewModels.GroupViewModel

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="AddStudentToGroup" method="post">
    <div class="form-group">
        <input type="hidden" name="groupId" value="@Model.Id" />
        <label for="email">Add student to current group</label>
        <input name="email" class="form-control col-lg-3" />
    </div>
    <div class="form-row">
        <div class="col-1">
            <button type="submit" class="btn btn-primary form-control">Add student</button>
        </div>
        <div class="col-1">
            <a asp-action="Index" class="btn btn-success form-control">Back</a>
        </div>
    </div>
</form>